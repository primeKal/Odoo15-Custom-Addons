<odoo>
    <data>
        <record id="partner_asset_smart_button" model="ir.ui.view">
            <field name="name">fleet.view.buttons</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_vehicles"
                        icon="fa-car">
                        <field string="Assets" name="asset_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>

</odoo>